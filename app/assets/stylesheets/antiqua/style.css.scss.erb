body {
  padding-top: 60px;
}

div.archive-queue-progress {
  width: 60px;
}

div.container.main { min-height: 670px; }

#account-submit-button {
  float: right;
  font-size: 20px;
  padding-left: 25px;
  padding-right: 25px;
}

#antiqua-logo {
  background: 0 -25px no-repeat url( <%= asset_path "antiqua/logo_sm.png" %> );
  height: 30px;
  letter-spacing: 1px;
  margin-left: 0px;
  padding: 5px 0 0 0;
  text-indent: -9999px;
  width: 100px;
  -webkit-transition: .3s all ease-in-out;
  -moz-transition: .3s all ease-in-out;
  transition: .3s all ease-in-out;
}

#antiqua-logo:hover {
  background-position: 0 9px;
}

footer.footer {
  background-color: #EEE;
  border-top: 1px solid #E5E5E5;
  margin-top: 15px;
  min-width: 940px;
  padding: 30px 0;
  text-shadow: 0 1px 0 white;
  -webkit-box-shadow: inset 0 5px 15px rgba(0,0,0,.025);
  -moz-box-shadow: inset 0 5px 15px rgba(0,0,0,.025);

  p { margin-bottom: 0; }
}

h1.title {
  margin-bottom: 20px;
}

.hero-unit {
  margin-bottom: 18px;
}

.hero-unit .call-to-action {
  padding: 10px 0;
}

.pricing-row {
  margin-bottom: 10px;
}

p.pricing {
  font-size: 37px;
  letter-spacing: -1px;
  line-height: 1;
  margin-bottom: 10px;
  margin-top: 15px;
}

p.pricing-individual {
  margin-top: 0px;
}

span.pricing-separator {
  color: #57A957;
}

td.archive-state-cell {
  vertical-align: middle;

  span.label {
    letter-spacing: 1px;
    padding: 3px;
  }
}

td.repo-table-description-cell {
  max-width: 300px;
}

a.dropdown-toggle img {
  margin: -5px 5px;
  vertical-align: middle;
}

#toggle-poller {
  float: right;
  margin-bottom: 10px;
}

#destroy-subscription-form,
.account-monthly-charge,
.account-subscription-date,
.account-archive-count,
.account-payment-information,
.account-card-number,
.account-card-cvc,
.account-card-expiry-month,
.account-card-expiry-year {
  margin-bottom: 0;
}
