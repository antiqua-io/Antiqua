<div class="row">
  <div class="span3">
    <h3>Subscription Information</h3>
  </div>
  <div class="span9">
    <div class="well">
      <p>You are automatically being charged $3 monthly.</p>
    </div>
  </div>
</div>
<div class="row">
  <div class="span3">
    <h4>Start Date</h4>
  </div>
  <div class="span9">
    <div class="well">
      <p>You subscribed on <%= current_user.subscription.created_at %></p>
    </div>
  </div>
</div>
<div class="row">
  <div class="span3">
    <h4>Unsubscribe</h4>
  </div>
  <div class="span9">
    <div class="well">
      <%= form_tag "/users/#{ current_user.user_name }/subscription" , :method => :delete , :id => "destroy-subscription-form" do | f | %>
        <button class="btn btn-large btn-danger" type="submit">Unsubscribe from Antiqua!</button>
      <% end %>
    </div>
  </div>
</div>
<% content_for :page_javascript do %>
  <%= javascript_include_tag "account" %>
<% end %>
