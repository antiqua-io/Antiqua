<h1 class="title">Account & Subscription</h1>
<div class="row">
  <div class="span3">
    <h2>Hey <%= current_user.user_name %>!</h2>
  </div>
  <div class="span9">
    <div class="well">
      <p>You currently have <%= current_user.archives.count %> archives.</p>
    </div>
  </div>
</div>
<% if current_user.subscribed? %>
  <%= render "subscription_info" %>
<% else %>
  <%= render "payment_form" %>
<% end %>
